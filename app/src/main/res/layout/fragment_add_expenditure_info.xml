<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registerPageBackgroundColor"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/expenditure_more_info_icon_description"
            android:src="@drawable/ic_baseline_monetization_on_24"
            app:tint="@color/white" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/expenditure_type_of_statistic_textfield_add_expenditure_info"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
            app:boxBackgroundColor="@color/registerPageBackgroundColor"
            app:boxStrokeWidth="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/expenditure_type_of_statistic_edittext_add_expenditure_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:text="@string/expenditure_more_info_type_of_statistic"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenditure_date_selected_textfield_add_expenditure_info"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
        app:boxBackgroundColor="@color/registerPageBackgroundColor"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expenditure_date_selected_edittext_add_expenditure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/expenditure_more_info_date_selected"
            android:text="@string/sample_text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenditure_car_mileage_textfield_add_expenditure_info"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
        app:boxBackgroundColor="@color/registerPageBackgroundColor"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expenditure_car_mileage_edit_text_add_expenditure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/expenditure_more_info_last_mileage"
            android:text="@string/sample_text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenditure_expenditure_type_add_expenditure_info"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
        app:boxBackgroundColor="@color/registerPageBackgroundColor"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expenditure_expenditure_type_edittext_add_expenditure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/expenditure_more_info_expenditure_type"
            android:text="@string/sample_text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenditure_total_cost_textfield_add_expenditure_info"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
        app:boxBackgroundColor="@color/registerPageBackgroundColor"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expenditure_total_cost_edittext_add_expenditure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="@string/expenditure_more_info_total_cost"
            android:text="@string/sample_text"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ffffff" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/receipt_images_textfield_add_expenditure_info"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColorHint="@color/loginAndRegisterPageSecondaryColor"
        app:boxBackgroundColor="@color/registerPageBackgroundColor"
        app:boxStrokeWidth="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/receipt_images_edittext_add_expenditure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/fragment_add_expenditure_receipt_images"
            android:textColor="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/receipt_image_view_add_expenditure_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/fragment_add_car_photo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_receipt_24" />

        <ImageView
            android:id="@+id/receipt_image_view2_add_expenditure_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/fragment_add_car_photo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_receipt_24" />

        <ImageView
            android:id="@+id/receipt_image_view3_add_expenditure_info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/fragment_add_car_photo_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_receipt_24" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_cancel_add_expenditure_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_add_note_info_button_cancel"
        tools:ignore="TouchTargetSizeCheck" />

</LinearLayout>